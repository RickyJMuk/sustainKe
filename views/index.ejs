<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <style>
    .hero-article {
      background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('/images/<%= featuredArticles[0].image %>');
      background-size: cover;
      min-height: 60vh;
    }
  </style>
</head>
<body class="editorial-style">
  <%- include('partials/navbar') %>

  <!-- Hero Article -->
  <section class="hero-article d-flex align-items-end mb-5">
    <div class="container text-white pb-5">
      <div class="row">
        <div class="col-lg-8">
          <span class="badge bg-success mb-2"><%= featuredArticles[0].category %></span>
          <h1 class="display-4 fw-bold"><%= featuredArticles[0].title %></h1>
          <p class="lead"><%= featuredArticles[0].excerpt %></p>
          <a href="/article/<%= featuredArticles[0].id %>" class="btn btn-outline-light">Read Feature</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Grid -->
  <main class="container mb-5">
    <section class="editorial-intro mb-5">
      <h2>Welcome to SustainKenya</h2>
      <p>Your trusted source for in-depth news and analysis on sustainability, climate change, renewable energy, and biodiversity in Kenya and beyond. Stay informed with our expert coverage and insightful editorials.</p>
    </section>
    <div class="row g-4 mb-5">
      <% featuredArticles.slice(1, 3).forEach(article => { %>
        <div class="col-md-6">
          <div class="card border-0">
            <img src="/images/mara.png" class="card-img-top" alt="<%= article.title %>">
            <div class="card-body px-0">
              <span class="badge bg-success mb-2"><%= article.category %></span>
              <h3 class="card-title"><%= article.title %></h3>
              <p class="card-text text-muted"><%= article.excerpt %></p>
              <a href="/article/<%= article.id %>" class="btn btn-link ps-0">Continue reading â†’</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Latest News Section -->
    <div class="row">
      <div class="col-12">
        <h2 class="section-divider mb-4">Latest Updates</h2>
      </div>
      
      <% latestArticles.forEach(article => { %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100 border-0">
            <img src="/images/Sustainability3.jpg" class="card-img-top" alt="<%= article.title %>">
            <div class="card-body px-0">
              <small class="text-uppercase text-success"><%= article.category %></small>
              <h5 class="card-title mt-1"><%= article.title %></h5>
              <p class="card-text text-muted"><small><%= article.date %></small></p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>