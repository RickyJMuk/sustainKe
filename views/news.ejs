<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body class="editorial-style">
  <%- include('partials/navbar') %>

  <main class="container my-5">
    <div class="row mb-4">
      <div class="col-12">
        <h1 class="page-title">All News</h1>
        <p class="lead">Latest sustainability and development stories from Kenya and beyond</p>
      </div>
    </div>

    <div class="row">
      <% articles.forEach(article => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100 editorial-card">
            <img src="/images/greenpower.jpg" class="card-img-top" alt="<%= article.title %>">
            <div class="card-body">
              <span class="badge bg-success mb-2"><%= article.category %></span>
              <h5 class="card-title"><%= article.title %></h5>
              <p class="article-meta">By <%= article.author || 'Staff Writer' %> | <small class="text-muted">Published on <%= article.date %></small></p>
              <p class="card-text"><%= article.excerpt %></p>
              <a href="/article/<%= article.id %>" class="btn btn-outline-success">Read More</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>