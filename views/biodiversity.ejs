<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container my-5">
    <h1 class="mb-4">Biodiversity & Wildlife</h1>
    <div class="row">
      <% articles.forEach(article => { %>
        <div class="col-lg-6 mb-4">
          <div class="card mb-3 h-100">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="/images/<%= article.image %>" class="img-fluid rounded-start h-100" alt="<%= article.title %>">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <span class="badge bg-success mb-2"><%= article.category %></span>
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text"><small class="text-muted">Published on <%= article.date %></small></p>
                  <a href="/article/<%= article.id %>" class="btn btn-outline-success btn-sm">Read More</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
