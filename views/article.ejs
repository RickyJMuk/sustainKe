<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container my-5">
    <article class="article-content">
      <div class="row mb-4">
        <div class="col-12">
          <span class="badge bg-success mb-2"><%= article.category %></span>
          <h1 class="article-title"><%= article.title %></h1>
          <p class="text-muted">Published on <%= article.date %></p>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-12">
          <img src="/images/<%= article.image %>" class="img-fluid rounded mb-4" alt="<%= article.title %>">
        </div>
      </div>

      <div class="row">
        <div class="col-lg-8 mx-auto">
          <div class="article-body">
            <p><%= article.content %></p>
            <!-- In a real app, this would be proper article content with paragraphs, headings, etc. -->
          </div>
        </div>
      </div>
    </article>
  </main>

  <%- include('partials/footer') %>
</body>
</html>