<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body class="editorial-style">
  <%- include('partials/navbar') %>

  <main class="container my-5">
    <article class="article-content">
      <div class="row mb-4">
        <div class="col-12">
          <span class="badge bg-success mb-2"><%= article.category %></span>
          <h1 class="article-title"><%= article.title %></h1>
          <p class="article-meta">By <%= article.author || 'Staff Writer' %> | <small class="text-muted">Published on <%= article.date %></small></p>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-12">
          <img src="/images/<%= article.image %>" class="img-fluid rounded mb-4" alt="<%= article.title %>">
        </div>
      </div>

      <div class="row">
        <div class="col-lg-8 mx-auto">
          <div class="article-body">
            <p><%= article.content %></p>
            <!-- In a real app, this would be proper article content with paragraphs, headings, etc. -->
          </div>
          <div class="article-tags mt-4">
            <strong>Tags:</strong>
            <% if (article.tags && article.tags.length) { %>
              <% article.tags.forEach(function(tag, index) { %>
                <a href="/tags/<%= tag %>" class="badge bg-secondary text-white me-1"><%= tag %></a>
              <% }); %>
            <% } else { %>
              <span>No tags</span>
            <% } %>
          </div>
        </div>
      </div>
    </article>
  </main>

  <%- include('partials/footer') %>
</body>
</html>